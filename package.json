{
  "name": "vite-plugin-browser-sync",
  "version": "1.0.5",
  "packageManager": "pnpm@8.6.12",
  "description": "Add BrowserSync in your Vite project",
  "author": "Applelo",
  "license": "GPL-3.0",
  "homepage": "https://github.com/Applelo/vite-plugin-browser-sync",
  "repository": {
    "type": "git",
    "url": "https://github.com/Applelo/vite-plugin-browser-sync"
  },
  "bugs": "https://github.com/Applelo/vite-plugin-browser-sync/issues",
  "keywords": [
    "browsersync",
    "browser-sync",
    "livereload",
    "serve",
    "vite",
    "vite-plugin"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "vite": "^3.0.0 || ^4.0.0"
  },
  "dependencies": {
    "@types/browser-sync": "^2.27.0",
    "browser-sync": "^2.29.3",
    "kolorist": "^1.8.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.40.2",
    "@vitest/coverage-v8": "^0.34.1",
    "eslint": "^8.46.0",
    "playwright": "^1.36.2",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.1"
  }
}
