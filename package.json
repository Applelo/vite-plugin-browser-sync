{
  "name": "vite-plugin-browser-sync",
  "version": "1.0.1",
  "description": "Add BrowserSync in your Vite project",
  "author": "Applelo",
  "license": "GPL-3.0",
  "homepage": "https://github.com/Applelo/vite-plugin-browser-sync",
  "repository": {
    "type": "git",
    "url": "https://github.com/Applelo/vite-plugin-browser-sync"
  },
  "bugs": "https://github.com/Applelo/vite-plugin-browser-sync/issues",
  "keywords": [
    "browsersync",
    "browser-sync",
    "livereload",
    "serve",
    "vite",
    "vite-plugin"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "format": "prettier --write --cache .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "vite": "^2.9.0 || ^3.0.0-0"
  },
  "dependencies": {
    "@types/browser-sync": "^2.26.3",
    "browser-sync": "^2.27.10",
    "kolorist": "^1.6.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "@vitest/coverage-c8": "^0.25.2",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.12.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "playwright": "^1.28.0",
    "prettier": "^2.7.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3",
    "vite": "^3.2.4",
    "vitest": "^0.25.2"
  },
  "packageManager": "pnpm@7.3.0"
}
