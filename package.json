{
  "name": "vite-plugin-browser-sync",
  "version": "1.0.3",
  "description": "Add BrowserSync in your Vite project",
  "author": "Applelo",
  "license": "GPL-3.0",
  "homepage": "https://github.com/Applelo/vite-plugin-browser-sync",
  "repository": {
    "type": "git",
    "url": "https://github.com/Applelo/vite-plugin-browser-sync"
  },
  "bugs": "https://github.com/Applelo/vite-plugin-browser-sync/issues",
  "keywords": [
    "browsersync",
    "browser-sync",
    "livereload",
    "serve",
    "vite",
    "vite-plugin"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "format": "prettier --write --cache .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "vite": "^3.0.0 || ^4.0.0"
  },
  "dependencies": {
    "@types/browser-sync": "^2.26.3",
    "browser-sync": "^2.28.3",
    "kolorist": "^1.7.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitest/coverage-c8": "^0.25.8",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-define-config": "^1.16.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "playwright": "^1.31.2",
    "prettier": "^2.8.4",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.25.8"
  },
  "packageManager": "pnpm@7.3.0"
}
