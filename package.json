{
  "name": "vite-plugin-browser-sync",
  "type": "module",
  "version": "3.0.0",
  "packageManager": "pnpm@8.14.1",
  "description": "Add BrowserSync in your Vite project",
  "author": "Applelo",
  "license": "MIT",
  "homepage": "https://github.com/Applelo/vite-plugin-browser-sync",
  "repository": {
    "type": "git",
    "url": "https://github.com/Applelo/vite-plugin-browser-sync"
  },
  "bugs": "https://github.com/Applelo/vite-plugin-browser-sync/issues",
  "keywords": [
    "browsersync",
    "browser-sync",
    "livereload",
    "serve",
    "vite",
    "vite-plugin"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsup src/index.ts",
    "build:watch": "tsup src/index.ts --watch",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "vite": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "@types/browser-sync": "^2.29.0",
    "browser-sync": "^3.0.2",
    "kolorist": "^1.8.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.3",
    "@vitest/coverage-v8": "^1.2.1",
    "eslint": "^8.56.0",
    "playwright": "^1.41.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.1"
  }
}
